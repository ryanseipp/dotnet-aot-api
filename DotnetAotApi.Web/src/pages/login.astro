---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/solid/LoginForm.tsx';
---

<Layout title="Login">
  <main class="max-w-sm h-screen mx-auto flex flex-col justify-center items-center">
    <div class="w-full bg-slate-50 dark:bg-slate-900 p-4 rounded-lg shadow-black shadow flex flex-col justify-center items-center">
      <h1 class="text-2xl mb-8">Login to your account</h1>
      <LoginForm client:load />
    </div>
  </main>
</Layout>
